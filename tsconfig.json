{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ES6",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2022"
    ],
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@functions/*": [
        "src/functions/*"
      ]
    },
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*"
  ]
}